                        <GridViewColumn Header="Phone Number" Width="auto" DisplayMemberBinding="{Binding phoneNumber}" />
                        <GridViewColumn Header="Parameter" Width="auto" DisplayMemberBinding="{Binding parameter}" />
                        <GridViewColumn Header="ID" Width="auto" DisplayMemberBinding="{Binding id}" />

                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>-->

        <Label Grid.Column="1" Content="Unassigned reservations" HorizontalAlignment="Center" FontSize="20"></Label>

        <ListView Margin="0,50,0,0" Name="ListView" Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" MouseLeftButtonDown="ListView_MouseLeftButtonDown" MouseDown="ListView_MouseDown">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style>
                            <Setter Property="TextElement.FontSize"
                            Value="8" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridViewColumn Header="Guests" Width="auto" DisplayMemberBinding="{Binding numberOfGuests}" />
                    <GridViewColumn Header="Time" Width="auto" DisplayMemberBinding="{Binding stringTime}" />
                    <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding name}" />
                    <GridViewColumn Header="Phone Number" Width="auto" DisplayMemberBinding="{Binding phoneNumber}" />
                    <GridViewColumn Header="Parameter" Width="auto" DisplayMemberBinding="{Binding parameter}" />
                    <GridViewColumn Header="ID" Width="auto" DisplayMemberBinding="{Binding id}" />

                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Vertical" Grid.Row="4" Grid.Column="1">
            <Label Content="Assigned reservations" HorizontalAlignment="Center" FontSize="20"></Label>
            <ListView MinHeight="190" Margin="10" Name="AssResListView">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style>
                                <Setter Property="TextElement.FontSize"
                            Value="8" />
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="Guests" Width="auto" DisplayMemberBinding="{Binding numberOfGuests}" />
                        <GridViewColumn Header="Time" Width="auto" DisplayMemberBinding="{Binding stringTime}" />
                        <GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding name}" />
                        <GridViewColumn Header="Phone Number" Width="auto" DisplayMemberBinding="{Binding phoneNumber}" />
                        <GridViewColumn Header="Parameter" Width="auto" DisplayMemberBinding="{Binding parameter}" />
                        <GridViewColumn Header="ID" Width="auto" DisplayMemberBinding="{Binding id}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="AddReservationbtn" Height="50" Content="Add new reservation" FontSize="20" Margin="5,0" Click="AddReservationbtn_Click" >
                
            </Button>
        </StackPanel>





    </Grid>


    <!--<Canvas x:Name="Area" ClipToBounds="True" Width="800" Height="400" Grid.Column="1">


    </Canvas>-->



</Window>
